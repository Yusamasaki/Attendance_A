<% provide(:title, 'Edit TraningMenu') %>

<h1>編集</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_with(model: @traning_menu, url: user_traning_menu_path(@user), local: true, method: :patch) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @traning_menu } %>
      
      <%= f.label :traning_event, class: "label-form" %>
      <%= f.text_field :traning_event, class: "form-control" %><br>
      
      <%= f.label :body_part, class: "label-form" %>
      <%= f.text_field :traning_event, class: "form-control" %><br>
      
      <%= f.label :target_muscle, class: "label-form" %>
      <%= f.text_field :traning_event, class: "form-control" %><br>

      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", user_traning_menus_path(@user), class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div>